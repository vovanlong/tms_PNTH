<%= form_for [:supervisor, @user], class: "form-group" do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :email %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label :address %>
  <%= f.text_field :address, class: "form-control" %>

  <%= f.label :school %>
  <%= f.text_field :school, class: "form-control" %>

  <%= f.label :roles %>
  <%= f.select(:roles, User.roles.keys) %><br><br>

  <span class="picture">
    <%= f.file_field :picture %>
  </span><br>

  <%= f.label :password %>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.label :password_confirmation, t(".confirm") %>
  <%= f.password_field :password_confirmation, class: "form-control" %>

  <%= f.submit t(".button_text"), class: "btn btn-primary" %>
<% end %>
