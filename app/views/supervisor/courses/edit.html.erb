            </tr>
          </thead>
          <tbody>
            <%= render partial: "add_subject", collection: @all_subjects, as: :subject %>
          </tbody>
        </table>
      </div>
      <div id="menu1" class="tab-pane fade">
        <%= t ".add_members" %>
        <table class="table table-bordered">
          <h3><%= t ".trainers" %></h3>
          <thead>
            <tr>
              <th><%= t".name" %></th>
